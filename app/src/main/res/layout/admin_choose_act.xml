<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
<ImageView
    android:id="@+id/admin_pic"
    android:layout_width="80dp"
    android:layout_height="80dp"
    app:layout_constraintTop_toTopOf="parent"
    app:layout_constraintRight_toRightOf="parent"
    app:layout_constraintLeft_toLeftOf="parent"
    android:src="@drawable/admin"
    android:layout_margin="20dp"/>

    <TextView
        android:id="@+id/admin_view_appointments"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:paddingTop="10dp"
        android:text="Pending Appointments"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/admin_pic"
        android:onClick="pendingAppointments"
       android:background="@drawable/border_textview"
        />
    <TextView
        android:id="@+id/admin_view_patients"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:paddingTop="10dp"
        android:text="List Of Users"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/admin_view_appointments"
        android:onClick="listUsers"
        android:background="@drawable/border_textview"/>
    <TextView
        android:id="@+id/admin_view_feedback"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_margin="20dp"
        android:paddingTop="10dp"
        android:text="Feedback"
        android:textAlignment="center"
        android:textSize="28sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/admin_view_patients"
        android:background="@drawable/border_textview"
        android:onClick="feedBack"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:text="*This is for Hospital Admins Only"
        android:layout_marginTop="160dp"
        android:layout_gravity="center"
        app:layout_constraintTop_toBottomOf="@id/admin_view_feedback"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>